{
	"arrowParens": "always",
	"bracketSpacing": true,
	"cursorOffset": -1,
	"endOfLine": "crlf",
	"htmlWhitespaceSensitivity": "css",
	"insertPragma": false,
	"jsxBracketSameLine": false,
	"jsxSingleQuote": true,
	"printWidth": 80,
	"proseWrap": "preserve",
	"quoteProps": "consistent",
	"rangeStart": 0,
	"requirePragma": false,
	"semi": true,
	"singleQuote": true,
	"tabWidth": 2,
	"trailingComma": "es5",
	"useTabs": true,
	"overrides": [
		{
			"files": "*.js",
			"options": { "parser": "babel" }
		},
		{
			"files": "*.html",
			"options": { "parser": "html" }
		},
		{
			"files": "*.scss",
			"options": { "parser": "scss" }
		},
		{
			"files": "*.css",
			"options": { "parser": "css" }
		},
		{
			"files": "*.md",
			"options": { "parser": "markdown" }
		},
		{
			"files": "*.json",
			"options": { "parser": "json" }
		}
	]
}
